<Window x:Class="TemplateManager.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TemplateManager"
        mc:Ignorable="d"
        Title="Template Manager" Height="424.947" Width="700" Loaded="OnWindowLoaded"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <ComboBox ItemsSource="{Binding Path=Templates}"
                  DisplayMemberPath="Name"
                  SelectedValuePath="Name"
                  SelectedValue="{Binding Path=CurrentTemplate}" Margin="10,10,372,362" />
        <Button x:Name="NewButton" Content="New" HorizontalAlignment="Left" Height="27" Margin="24,354,0,0" VerticalAlignment="Top" Width="76"/>
        <TextBox x:Name="MainTextBox" HorizontalAlignment="Left" Height="299" Margin="10,42,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="672"/>

    </Grid>
</Window>
